# Wekeza API Configuration
# Copy this file to .env and fill in your credentials

# OAuth Credentials (get from https://developers.wekeza.com)
WEKEZA_CLIENT_ID=your_client_id_here
WEKEZA_CLIENT_SECRET=your_client_secret_here

# API Endpoints
# Use sandbox for testing, production for live data
WEKEZA_BASE_URL=https://sandbox.wekeza.com/api/v1
WEKEZA_OAUTH_URL=https://sandbox.wekeza.com/oauth

# Webhook Configuration
WEBHOOK_SECRET=your_webhook_secret_here
WEBHOOK_PORT=3000

# Optional: Rate Limiting
MAX_REQUESTS_PER_MINUTE=100
